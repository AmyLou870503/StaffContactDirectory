<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StaffContactDirectory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StaffContactDirectory"
    Shell.NavBarIsVisible="True"
    Shell.NavBarHasShadow="True"
    Shell.FlyoutBehavior="Disabled">
    <Shell.ToolbarItems>
        <ToolbarItem
            Text="Options"
            IconImageSource="settingswhite.svg"
            Clicked="OnSettingsClicked" />
    </Shell.ToolbarItems>
    
    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent                
                ContentTemplate="{DataTemplate local:Views.MainPage}"
                Route="Views.MainPage" />
        </Tab>
        <Tab Title="Contact List" Icon="contactlist.svg">
            <ShellContent
                Title="Contact List"                
                ContentTemplate="{DataTemplate local:Views.ContactListPage}"
                Route="Views.ContactListPage" />
        </Tab>
        <Tab Title="About" Icon="info.svg">
            <ShellContent
                Title="About"                
                ContentTemplate="{DataTemplate local:Views.AboutPage}"
                Route="Views.AboutPage" />
        </Tab>
    </TabBar>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Views.MainPage}"
        Route="Views.MainPage" />

</Shell>