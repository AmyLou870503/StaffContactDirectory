<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StaffContactDirectory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StaffContactDirectory"
    xmlns:view="clr-namespace:StaffContactDirectory.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.svg">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate view:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Contacts" Icon="contact_list.svg">
            <ShellContent
                Title="Contact List"
                ContentTemplate="{DataTemplate view:ContactListPage}"
                Route="ContactListPage" />
        </Tab>
        <Tab Title="About" Icon="about_icon.svg">
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate view:AboutPage}"
                Route="AboutPage" />
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.svg">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate view:SettingsPage}"
                Route="SettingsPage" />
        </Tab>

    </TabBar>
 

</Shell>
